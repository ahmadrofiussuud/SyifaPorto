<svg width="1600" height="900" viewBox="0 0 1600 900" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Calm pastel background -->
  <rect width="1600" height="900" fill="#FFF7FB"/>
  
  <!-- Soft gradient blobs -->
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFD4EC;stop-opacity:0.7" />
      <stop offset="100%" style="stop-color:#B8D4FF;stop-opacity:0.7" />
    </linearGradient>
    <linearGradient id="grad2" x1="100%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#C4B5FD;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#FFE4F1;stop-opacity:0.6" />
    </linearGradient>
    <filter id="noise">
      <feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="4" stitchTiles="stitch"/>
      <feColorMatrix type="saturate" values="0"/>
      <feBlend mode="multiply" in="SourceGraphic"/>
    </filter>
  </defs>
  
  <!-- Abstract shapes -->
  <ellipse cx="300" cy="250" rx="280" ry="280" fill="url(#grad1)" opacity="0.5"/>
  <ellipse cx="1300" cy="650" rx="320" ry="320" fill="url(#grad2)" opacity="0.5"/>
  <rect x="450" y="150" width="700" height="600" rx="120" fill="url(#grad1)" opacity="0.3"/>
  
  <!-- Subtle noise texture -->
  <rect width="1600" height="900" filter="url(#noise)" opacity="0.04"/>
  
  <!-- Minimal label -->
  <text x="60" y="840" font-family="Inter, sans-serif" font-size="28" font-weight="600" fill="#1F2937" opacity="0.15">ISS Malaysia</text>
</svg>
